let nota = 13; //Se eu não utilizar o 'BREAK' ele irá executar todos os cases;

// Vou fazer uma conversão de nota apara conceito usando o SWITCH;

switch(Math.ceil(nota)) { //'ceil' arredonda valores "para cima";
    default: //algo fora do comum no código;
        console.log('Nota Inválida!');
        break;
    case 10:
        console.log('ARRASOU !!!')
        break;
    case 9:
    case 8:
    case 7:
        console.log ('Parabéns, aprovado!');
        break; // 
    case 4: case 3: case 2: //Também posso colocar tudo na mesma linha;
        console.log ('Reprovado!');
        break;
    case 1:
    case 0:
        console.log ('Reprovado com louvor!'); //No último case não preciso utilizar o 'BREAK';
} 
 
console.log ('Fim!');

//O 'Break' funciona como uma espécie de vírgula para que só execute o case que precisamos;

